pipeline {
    agent any

    tools {
        maven 'maven' // Name must match the Maven installation in Jenkins Global Tool Configuration
    }

    stages {
        stage('Verify Java Version') {
            steps {
                sh '''
                    env | grep -e PATH -e JAVA_HOME
                    which java
                    java -version
                    mvn -v
                '''
            }
        }

    stage('SonarQube Scanner Auth Token With Conjur Credentials for Code Analysis') {
      steps {
        script{
          def varVal = null
        withSonarQubeEnv(credentialsId: 'folder-1-pipeline-regression-credential1', installationName: 'SonarQube_Server') {
          varVal = env.SONAR_AUTH_TOKEN
          sh "mvn clean verify sonar:sonar -Dsonar.projectKey=conjur-credentials -Dsonar.projectName='conjur-credentials'"
        }
      echo "SonarQube Scanner Token Value From Conjur Credentials  : ${varVal}"
       }
      }
    }

 

